# WPEFramework SystemAudioPlayer Initialiser
# Activates the SystemAudioPlayer plugin after framework initialization
[Unit]
Description=WPEFramework SystemAudioPlayer Initialiser
Requires=wpeframework.service
After=wpeframework.service
ConditionPathExists=/tmp/wpeframeworkstarted
[Service]
Type=oneshot
RemainAfterExit=yes
TimeoutStartSec=30
TimeoutStopSec=10
PrivateTmp=yes
ExecStart=/usr/bin/PluginActivator org.rdk.SystemAudioPlayer

[Install]
WantedBy=multi-user.target
